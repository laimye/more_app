<div class="container">
  <%= form_for [@trip, @post] do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="panel panel-info">
      <div class="panel-heading">
        <strong>CONTENT</strong>
      </div>
        <%= f.text_area :content, size:"5x5", :class => "form-control", :required => true %>
      </div>

      <div class="field">
      <%= f.file_field :image %><br><br>
    </div>

    <% if @post.id %>
      <div class="actions"><%= f.submit  "Update Post", class: "btn btn-default"%></div>
    <% else %>
      <div class="actions"><%= f.submit  "Add Post", class: "btn btn-default"%></div>
    <% end %><br>


    </div>
  <% end %>
</div>