<h1>Sign Up</h1>
<h2>THE ART OF TRAVELLING</h2>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :name, :required => true, placeholder: "Name" %><br>
  </div>
  <div class="field">
    <%= f.text_field :email, :required => true, placeholder: "Email" %>
  </div>
  <div class="field">
    <%= f.password_field :password, :required => true, placeholder: "Password" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, :required => true, placeholder: "Confirm Password" %>
  </div>

  <div class="field">
  <%= f.text_area :about, placeholder: "Tell us about yourself" %>
  </div>

  <div class="field">
  <%= f.text_area :fact, placeholder: "Any fun facts you would like to share?" %>
  </div>

  <div class="field">
  <%= f.text_area :places, placeholder: "Share with others places you've travelled to" %>
  </div>

  <div class="field">
  <%= f.file_field :image %><br><br>
  </div>

  <div class="actions"><%= f.submit  "Create Profile", class: "btn btn-default"%></div>
<% end %>
